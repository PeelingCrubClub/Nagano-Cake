<div class="container">
  <%= render "shared/flash_message" %>
  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <h2 class="mb-4">新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="form-group">
        <%= f.label :フリガナ, class: "brown-border px-3" %>
        <div class="row">
          （セイ）<%= f.text_field :last_name_kana, class: "form-control col-4"%>
          （メイ）<%= f.text_field :first_name_kana, class: "form-control col-4"%>
        </div>
      </div>

 <div class="form-group">
        <%= f.label :氏名, class: "brown-border px-3" %>
        <div class="row">
          （姓）<%= f.text_field :last_name, class: "form-control col-4"%>
          （名）<%= f.text_field :first_name, class: "form-control col-4"%>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :郵便番号, class: "brown-border px-3" %>
        <%= f.text_field :postal_code, class: "form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %>
        <%= f.text_field :address, class: "form-control offset-1 col-8"%>
      </div>

     <div class="form-group">
        <%= f.label :電話番号, class: "brown-border px-3" %>
        <%= f.text_field :tel, class: "form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control offset-1 col-8"%>
      </div>


  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上 )</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>

<h7 class="mb-3">会員登録がお済みのお客様は</h7>
<%= link_to "こちら", new_customer_session_path %>
<h7 class="mb-3">からログインしてください</h7>



