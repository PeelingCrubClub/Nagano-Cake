<div class="container my-5" style="height: 650px;">
  <div class="row">
    <%= render "shared/flash_message" %>
    <div class="offset-1 text-center">
      <h3 class="text title-text">
        注文履歴一覧
      </h3>
    </div>
  </div>
  <% if @orders.exists? %>
    <div class="row mt-5">
      <table class="table table-bordered table-hover">
        <thead class="table-active text">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr class="light-text">
            <td><%= order.created_at.strftime('%Y年%m月%d日') %></td>
            <td>
                〒<%= order.shipping_postal_code %><br>
                <%= order.delivery_address %><br>
                <%= order.receiver_name %> 様
            </td>
            <td>
              <% order.order_items.all.each do |order| %>
                <%= order.item.item_name %><br>
              <% end %>
            </td>
            <td>¥<%= order.total_price %></td>
            <td><%= order.order_status_i18n  %></td>
            <td>
              <%= link_to "表示する", order_path(order.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  <% else %>
    <div class="text-center">
      <h2>※注文履歴がありません</h2>
    </div>
  <% end %>

  <%= paginate @orders %>
</div>

