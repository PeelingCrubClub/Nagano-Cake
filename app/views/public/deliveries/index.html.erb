<div class="container my-5">
	<div class="row">
    <div class="offset-1">
		  <h2 class="red-border px-3 pb-1">配送先</h2>
		   <tbody>
    <% @deliveries.each do |delivery| %>
    <tr class="brown-border">
     	<td><%= delivery.delivery_postal_code %></td>
     	<td><%= delivery.address_name %></td>
     	
     	<td><%= link_to "編集する", edit_delivery_path(delivery.id),  class: "btn btn-sm btn-outline-danger" %>
          <%= link_to "削除する", delivery_path(delivery), method: :delete ,data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
        </td>
     </tr>
  <% end %>
  

     <%#= render 'layouts/error_messages', model: @delivery %>
	<div class="row my-3">
    <div class="offset-2 col-3">

      <div class="row my-3">
        <strong class="red-border">配送先を追加</strong>
      </div>
    	<%= form_for(@delivery_new) do |f| %>
        <div class="form-grous row">
      		<%= f.text_field :delivery_postal_code, class: "form-control", placeholder: "郵便番号" %>
        </div>

        <div class="form-group row">
      		<%= f.text_field :address_name, class: "form-control", placeholder: "住所" %>
        </div>

        <div class="row">
    		  <%= f.submit "登録する", class: "btn btn-primary btn-outline-danger mx-auto" %>
        </div>
    	<% end %>
    </div>

    
   </div>
</div>