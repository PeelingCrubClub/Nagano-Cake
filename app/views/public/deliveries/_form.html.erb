<div class="row justify-content-center">
 <%= form_with model: delivery, local:true do |f| %>
  <%= render "devise/shared/error_messages", resource: @delivery %>
  
 <div class="row justify-content-center">
  <table class="table table-borderless">
    <tr class="form-group">
      <th><%= f.label :delivery_postal_code, "郵便番号(ハイフンなし)", class: "form-label" %></th>
      <td><%= f.text_field :delivery_postal_code,class: "form-control" %></td>
    </tr>
    
       <tr class="form-group">
      <th><%= f.label :delivery_address, "住所", class: "form-label" %></th>
      <td><%= f.text_area :delivery_address, class: "form-control" %></td>
    </tr>
    
       <tr class="form-group">
      <th><%= f.label :address_name, "宛名", class: "form-label" %></th>
      <td><%= f.text_field :address_name, class: "form-control" %></td>
    </tr>
  </table>
 </div>
</div>
    
    <div class="row justify-content-center">
    <div class="form-group row">
     <div class="col-sm-4 offset-sm-4">
       <%= f.submit "変更を保存する", class: "btn" ,style: "background-color: #dcf4f4; color: #778899;"%>
      </div>
     </div>
    </div>
    </div>
  </div>
<% end %>
</div>