<div class="container my-5">

		<%= render "shared/flash_message" %>


	<div class="row">
		<div class="offset-sm-1">
			<h2 class="red-border px-3 pb-1">My Page</h2>
		</div>
	</div>

	<div class="row my-3">
		<div class="offset-sm-2">
			<strong class="red-border px-3">登録情報</strong>
		</div>
		 <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-outline-danger mx-auto my-1" %>
		 <%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-outline-danger mx-auto my-1" %>
	</div>


	<div class="row justify-content-center">
	  <div class="offset-sm-1 col-sm-10 align-self-center">
	    <table class="table table-hover">
	      <tr class="brown-border">
		    	<td>氏名</td>
		    	<td>
		    		<%= @customer.last_name %>
		    		<%= @customer.first_name %>
		    	</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>フリガナ</td>
		    	<td>
		    		<%= @customer.last_name_kana %>
		    		<%= @customer.first_name_kana %>
	    		</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>郵便番号</td>
		    	<td><%= @customer.postal_code %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>住所</td>
		    	<td><%= @customer.address %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>電話番号</td>
		    	<td><%= @customer.tel %></td>
	      </tr>

	      <tr class="brown-border">
	    		<td>メールアドレス</td>
	        <td><%= @customer.email %></td>
	      </tr>
	    </table>

	 </div>

		<div class="offset-sm-1 col-sm-10 pr-3">
			<div class="row justify-content-start">
		 		<%= link_to "配送先一覧を見る", '/deliveries', class: "btn btn-outline-danger my-1" %>
		 	</div>
		 	<div class="row justify-content-start">
				<%= link_to "注文一覧を見る", orders_path, class: "btn btn-outline-danger my-1" %>
			</div>
	</div>
</div>