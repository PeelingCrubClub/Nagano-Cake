<div class="container my-5">
	<div class="row">
		<div class="offset-sm-2">
			<h2 class="red-border bg-secondary p-2 text-dark bg-opacity-10">マイページ</h2>
		</div>
	</div>

	<div class="row col-sm-5">
	
			<strong class="red-border"><h3>登録情報</h3></strong>
			
		    <div class="row col-sm-5 offset-1"><%= link_to "編集する", edit_customer_path(@customer), class: "btn btn btn-success" %></div>
	
		  
		  
	    <table class="table table-border ">
	      <tr class="brown-border">
		    	<td class="bg-secondary p-2 text-dark bg-opacity-50">氏名</td>
		    	<td>
		    		<%= @customer.last_name %>
		    		<%= @customer.first_name %>
		    	</td>
	      </tr>
	      
	     

	      <tr class="brown-border">
		    	<td class="bg-secondary p-2 text-dark bg-opacity-10　border-dark">カナ</td>
		    	<td>
		    		<%= @customer.last_name_kana %>
		    		<%= @customer.first_name_kana %>
	    		</td>
	      </tr>

	      <tr class="brown-border">
		    	<td class="bg-secondary p-2 text-dark bg-opacity-10">郵便番号</td>
		    	<td><%= @customer.postal_code %></td>
	      </tr>

	      <tr class="brown-border">
		    <td class="bg-secondary p-2 text-dark bg-opacity-10">住所</td>
		    	<td><%= @customer.address %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td class="bg-secondary p-2 text-dark bg-opacity-10">電話番号</td>
		    	<td><%= @customer.tel %></td>
	      </tr>

	      <tr class="brown-border">
	    	<td class="bg-secondary p-2 text-dark bg-opacity-10">メールアドレス</td>
	        <td><%= @customer.email %></td>
	      </tr>
	    </table>
	    
	    </div>

	
		<div class="row col-sm-4">
				<div class="row">
		 		<h3>配送先</h3>
		 	</div><%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary my-1 offset-3 btn-lg" %>
		 </div>
		 
		 <div class="row col-sm-8">
		 	<div class="row">
			   <h3>注文履歴</h3>
			   </div>
			  <%= link_to "一覧を見る", orders_path, class: "btn btn-primary my-1 offset-1 btn-lg" %>
			</div>
		   </div>
     
	
	  
		  
	 
	

	
			
			
			　

		

