<div class='container'>
  <div class='row mt-4 mb-2'>
    <div class='col-2 px-0 bg-light px-2 py-2'>
      <p class='genre'>ジャンル検索</p>
      <hr class='hr0'>
      <% @genres.each do |genre| %>
        <%= link_to items_path, class:"btn btn-link text-dark" do %>
          <span class='genre-text'><%= genre.name %></span>
        <% end %>
      <% end %>
    </div>
    <div class='col-md-9 offset-md-1'>
      <div class='row'>
        <div class='col'>
          <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: "no-image.jpg" %>
        </div>
        <div class='col'>
          <p class='cake_name'><%= @item.item_name %></p>
          <p class='cake_introduction'><%= simple_format( @item.detail ) %></p>
          <p>価格:¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</p>
          <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
            <!--顧客情報送信フィールド-->
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <!--購入数のセレクトボックス-->
            <%= f.select :pieces, options_for_select((1..10).to_a) %>
            <%= f.submit "カートに入れる" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>