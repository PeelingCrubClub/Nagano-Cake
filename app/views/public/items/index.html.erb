<div class='container'>
  <div class='row mt-4 mb-2'>
    <h1>商品一覧</h1>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-2 px-0 bg-light px-2 py-2'>
      <p class='genre'>ジャンル検索</p>
      <hr class='hr0'>
      <% @genres.each do |genre| %>
        <%= link_to items_path, class:"btn btn-link text-dark" do %>
          <span class='genre-text'><%= genre.name %></span>
        <% end %>
      <% end %>
    </div>
    <div class='col-md-9 offset-md-1'>
      <div class='row'>
        <% @items.each do |item| %>
          <% if item.item_status == true %>
            <div class='col-4'>
              <ul>
                <li>
                  <%= link_to item_path(item.id) do %>
                    <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no-image.jpg" %>
                  <% end %>
                </li>
                <li><%= link_to item.item_name, item_path(item.id) %></li>
                <li><%= item.add_tax_price.to_s(:delimited) %></li>
              </ul>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>