<%= form_with model: [:admin, item], local: true do |f| %>

 <div class="form-group row">
   <%= f.label :image, "商品画像" %>
   <%= f.attachment_field :image %>
  </div>

  <div class="form-group row">
    <%= f.label :item_name, "商品名" %>
    <%= f.text_field :item_name, placeholder: "商品名" %>
  </div>

  <div class="form-group row">
    <%= f.label :detail, "商品説明" %>
    <%= f.text_area :detail, placeholder: "ここに説明文を記述します" %>
  </div>

  <div class="form-group row">
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"} %>
  </div>

  <div class="form-group row">
    <%= f.label :price, "税抜き価格" %>
    <%= f.text_field :price, placeholder: "商品の税別価格を記述して下さい" %>
  </div>

  <div class="form-group row">
    <%= f.label :item_status, "販売ステータス" %>
    <!-- 後日enum追加 -->
  </div>

  <div class="form-group row">
     <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>