<div class="container">
  <div class="row">
    <div class="col-9">
      <h2 class="mb-3">商品一覧</h2>
    </div>
    <div class="col-3 text-right">
      <%= link_to "", new_admin_item_path, class:"far fa-plus-square", :style => "color: black;" %>
    </div>
  </div>

     <div class="row">
       <div class="col-12">
         <table class="table">
          <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th></th>
            <th>商品名</th>
            <th>税別価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
         </thead>

         <tbody>
           <% @items.each do |item| %>
           <tr>
             <td><%= item.id %></td>
             <td><%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></td>
             <td><%= link_to item.item_name, admin_item_path(item.id) %></td>
             <td><%= item.price %></td>
             <td><%= item.genre.name %></td>
             <td>
               <% if item.item_status %>
                 <span class="text-success">販売中</span>
               <% else %>
                 <span class="text-secondary">販売停止中</span>
               <% end %>
             </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>