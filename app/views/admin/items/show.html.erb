<h2>商品詳細</h2>

<div class="row">
  <%= attachment_image_tag @product, :image, format: 'jpeg' %>
</div>

<tr>
  <td>商品名前</td>
  <td><%= @item.item_name %></td>
</tr>

<tr>
  <td>商品説明</td>
  <td><%= @item.detail %></td>
</tr>

<tr>
  <td>税込み価格</td>
  <td><%= @item.price %></td>
</tr>

<tr>
  <td>販売ステータス</td>
  <td>
    <% if @item.item_status %>
      <span class="text-success">販売中</span>
    <% else %>
      <span class="text-danger">販売停止中</span>
    <% end %>
  </td>
</tr>
 <tr>
  <td></td>
  <td>
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
  </td>
</tr>