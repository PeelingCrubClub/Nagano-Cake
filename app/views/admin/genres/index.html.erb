<div class="container">
  <%= render "shared/flash_message" %>
  <div class="row mb-3">
    <div class="col-12">
      <h2 class="mb-4">ジャンル一覧・追加</h2>
      <%= render 'shared/form_error', model: @genre %>
      <%= form_with model: [:admin, @genre], local: true do |f| %>
      <%= f.label :name, "ジャンル", class: "mb-2 mr-sm-2" %>
      <%= f.text_field :name, placeholder: "ジャンル名を入力", class: "form-control mb-2 mr-sm-2" %>
      <%= f.submit '新規登録', class:"btn btn-primary mb-2" %>
      <% end %>
   </div>
  </div>
  <div class="row">
     <div class="col-md-8 col-lg-6">
       <table class="table table-striped">
         <thead class="", style="background-color:#fce4ec;">
           <tr>
            <th colspan="2" class="text-center">ジャンル</th>
          　</tr>
         </thead>

        <tbody class="", bgcolor="#fcf7f7">
          <% @genres.each do |genre| %>
        <tr>
        <td><%= genre.name %></td>
        <td class="text-right">
          <%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %>
        </td>
        </tr>
      <% end %>
    </tbody>
    </tbody>
      </table>
    </div>
  </div>
</div>