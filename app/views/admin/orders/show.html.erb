<div>
  <div>
    <h2>注文明細</h2>

    <table class="table1">
      <tbody>
       <tr>
         <th>購入者</th>
          <td><%= link_to admin_customer_path(@order.customer) do %><!--要確認-->
            <%= @order.customer.last_name %> <%= @order.customer.first_name %>
            <% end %>
          </td>
       </tr>

       <tr>
         <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
       </tr>

       <tr>
         <th>配送先</th>
          <td>
            <%= @order.shipping_postal_code %>
            <%= @order.delivery_address %>
            <%= @order.receiver_name %>
          </td>
       </tr>

       <tr>
         <th>支払い方法</th>
          <td><%= @order.payment_method %></td>
       </tr>

       <tr>
         <th>注文ステータス</th>
          <td><!--%= @order.order_status %要編集--></td>
       </tr>
      </tbody>
    </table>
  </div>

  <div>
       <table class="table2">
      <thead>
       <tr>
         <th>商品名</th>
         <th>単価（税込）</th>
         <th>数量</th>
         <th>小計</th>
         <th>製作ステータス</th>
       </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <td><%= order_item.item.item_name %></td>
          <td><!--単価税込とってくる--></td>
          <td><%= order_item.number_of_piaces %></td>
          <td><!--小計つくる--></td>
          <td><!--製作ステータスとってくる--></td>
          <td><!--editボタン--></td>
        <% end %>
      </tbody>
    </table>
  </div>

   <div>
    <table class="table2">
    <tbody>
      <tr>
        <th>商品合計</th><td><!--商品合計とってくる--></td>
      </tr>

      <tr>
        <th>送料</th><td><%= @order.shipping_fee %></td>
      </tr>

      <tr>
        <th>請求金額合計</th><td><!--請求金額合計要編集--></td>
      </tr>
    </tbody>
  　</table>

  </div>
</div>