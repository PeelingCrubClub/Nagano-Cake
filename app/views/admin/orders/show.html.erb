<div class="container-fluid mx-5">
  <%= render "shared/flash_message" %>
    <div class="mx-9 mt-5"><h3>注文履歴詳細</h3></div>

    <table class="table table-borderless">
      <tbody>
       <tr>
         <th>購入者</th>
          <td><%= link_to admin_customer_path(@order.customer) do %><!--要確認-->
            <%= @order.customer.last_name %> <%= @order.customer.first_name %>
            <% end %>
          </td>
       </tr>

       <tr>
         <th>注文日</th>
          <td><%= l @order.created_at, format: :short %></td>
       </tr>

       <tr>
         <th>配送先</th>
          <td>
            <%= @order.shipping_postal_code %>
            <%= @order.delivery_address %>
            <%= @order.receiver_name %>
          </td>
       </tr>

       <tr>
         <th>支払い方法</th>
          <td><%= @order.payment_method %></td>
       </tr>

       <tr>
         <th>注文ステータス</th>
          <td id="order_status_<%= @order.id %>">
           <%= render partial: 'admin/orders/order_status', locals: { order: @order} %>
          </td>
          <%#= form_with model: [:admin, @order], method: :patch, local: true do |f| %>
          <%#= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
          <%#= f.submit "更新" %>
          <%# end %>
       </tr>
      </tbody>
    </table>


  <div class="row align-items-end">
   <div class="col-md-7">
      <table class="table table-borderless">
      <thead class="table-head" style="background-color:#FFE4E1;">
       <tr>
         <th scope="col">商品名</th>
         <th scope="col">単価（税込）</th>
         <th scope="col">数量</th>
         <th scope="col">小計</th>
         <th scope="col">製作ステータス</th>
       </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.item_name %></td>
          <td><%= order_item.tax_price %></td>
          <td><%= order_item.number_of_piaces %></td>
          <td><%= (order_item.tax_price.to_i * order_item.number_of_piaces.to_i).to_s(:delimited) %></td>
          <td>
            <%= form_with model: order_item, url: admin_order_order_item_path(@order,order_item), method: :patch, local: true do |f| %>
            <%= f.select :production_status, OrderItem.production_statuses.keys.map {|k| [I18n.t("enums.order_item.production_status.#{k}"), k]} %>
            <%= f.submit "更新" %>
            <% end %>
          </td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <th></th>

   <div class="col-md-4">
    <table class="table table-borderless">
    <tbody>
      <tr>
        <th>商品合計</th><td><%= (@order.total_price.to_i - @order.shipping_fee.to_i).to_s(:delimited) %>円</td>
      </tr>

      <tr>
        <th>送料</th><td><%= @order.shipping_fee.to_s(:delimited) %>円</td>
      </tr>

      <tr>
        <th>請求金額合計</th><td><%= (@order.total_price.to_i).to_s(:delimited) %>円</td>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
</div>

