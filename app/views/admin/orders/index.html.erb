<div class="container-fluid">
      <h2 class="mx-9 my-3">注文履歴一覧</h2>
       <p style="font-size:1.em;">本日の注文数 <%= link_to @count, admin_orders_path(order: 'today') %>件</p>

        <table class="table table-striped">
          <thead>
            <tr class="table-head" style="background-color:#FFE4E1;">
              <th scope="col">購入日時</th>
              <th scope="col">購入者</th>
              <th scope="col">注文個数</th>
              <th scope="col">注文ステータス</th>
            </tr>
          </thead>

          <tbody>
           <% @orders.each do |order| %>
            <td>
            <%= link_to admin_order_path(order) do %>
            <%= l order.created_at %>
            <% end %>
            </td>
            <td><%= order.customer.first_name %><%= order.customer.last_name %></td>

            <td><!--注文個数合計-->
              <%= order.order_items.sum(:number_of_piaces) %>
            </td>
            <!--注文ステータス-->
            <td><%= order.order_status_i18n %></td>
              </tr>
           <% end %>
          </tbody>
      </table>
      <%= paginate @orders %>
 </div>