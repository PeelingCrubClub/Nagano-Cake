<div class="contain">
  <%= render "shared/flash_message" %>
  <div class="row justify-content-center">
    <div class="mx-auto col-12 col-xl-10">
      <h2 class="mt-4 fs-2 mb-5 col-2 text-center">会員一覧</h2>
    </div>
  </div>

  <div class="col-md-8 offset-md-1">
    <table class="table justify-content-center">
      <thead bgcolor="#fce4ec">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th></th>
        </tr>
        <tbody bgcolor="#fcf7f7">
        <% @customer.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to  admin_customer_path(customer.id) do %>
              <%= customer.first_name %> <%=customer.last_name%>
              <% end %>
          </td>
          <td><%= link_to admin_customer_path(customer) do %></td>
          <td><%= customer.email %></td>
          <td> <% if customer.is_deleted == false %>
                 <%= "有効" %>
               <% else %>
                 <%= "退会済み" %>
              <% end %>
           </td>
        </tr>
      <% end %>
    <% end %>
      </tbody>
    </table>
 </div>
 </div>