<h2>会員一覧</h2>
<tr>
  <th>会員ID</th>
  <th>氏名</th>
  <th>メールアドレス</th>
  <th>ステータス</th>
</tr>

 <% @customer.each do |customer| %>
 <tr>
   <td><%= customer.id %></td>
   <td><%= link_to admin_customer_path(customer) do %>
         <%= customer.first_name + customer.last_name %></td>
   <td><%= customer.email %></td>
   <td><!--退会ステータス !--></td>
 </tr>
 <% end %>