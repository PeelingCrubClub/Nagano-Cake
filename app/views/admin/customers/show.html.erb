<h2><%= @customer.first_name + @customer.last_name %>さんの会員情報</h2>
<tr>
  <td>会員ID</td>
  <td><%= @customer.id %></td>
</tr>
<tr>
  <td>氏名</td>
  <td><%= @customer.first_name + "" + @customer.last_name %> </td>
</tr>
<tr>
  <td>フリガナ</td>
  <td><%= @customer.first_name_kana + "" + @customer.last_name_kana %> </td>
</tr>
<tr>
  <td>郵便番号</td>
  <td><%= @customer.postal_code %></td>
</tr>
<tr>
  <td>住所</td>
  <td><%= @customer.address %></td>
</tr>
<tr>
  <td>電話番号</td>
  <td><%= @customer.tel %></td>
</tr>
<tr>
  <td>メールアドレス</td>
  <td><%= @customer.email %></td>
</tr>
<tr>
  <td>会員ステータス</td>
  <td><% if @customer.is_deleted == true %>有効
       <% else %>
        退会済み
      <% end %>
  </td>
</tr>
<div class='row'>
  <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: 'btn btn-default' %>
  <%#= link_to '注文履歴一覧', admin_orders_path(@customer.id), class: 'btn btn-default' %>
  <%= link_to '注文履歴一覧', admin_orders_path(order: 'customer'), class: 'btn btn-default' %>
 </div>