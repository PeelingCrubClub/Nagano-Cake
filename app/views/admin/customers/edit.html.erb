<div class="container-fluid">
  <h2 class="mt-3 text-center"><%= @customer.first_name %> <%= @customer.last_name %>さんの会員情報編集</h2>

  <%= render 'shared/form_error', model: @customer %>
  <div class="row justify-content-center align-items-center">
    <table class="table table-borderless col-md-10 mx-auto">
    <tbody>
   <%= render 'shared/form_error', model: @customer %>
  <%= form_for(@customer, url: admin_customer_path(@customer.id)) do |f| %>

     <tr>
       <th><%= f.label :id, "会員ID", class:"col-form-label" %></th>
       <td><%= @customer.id %></td>
     </tr>


     <tr>
       <th><%= f.label :フリガナ, class: "brown-border px-3" %></th>
       <td>（セイ）<%= f.text_field :last_name_kana, autofocus: true, class: "form-control"%></td>
       <td>（セイ）<%= f.text_field :first_name_kana,  autofocus: true, class: "form-control"%></td>
     </tr>

     <tr>
       <th><%= f.label :フリガナ, class: "brown-border px-3" %></th>
       <td>（セイ）<%= f.text_field :last_name_kana, class: "form-control"%></td>
       <td>（メイ）<%= f.text_field :first_name_kana, class: "form-control"%></td>
     </tr>


     <tr>
       <th><%= f.label :郵便番号, class: "brown-border px-3" %></th>
       <td><%= f.text_field :postal_code,  autofocus: true, class: "form-control"%></td>
     </tr>

    <tr>
       <th><%= f.label :住所, class: "brown-border px-3" %></th>
       <td><%= f.text_field :address,  autofocus: true, class: "form-control"%></td>
    </tr>

    <tr>
       <th><%= f.label :電話番号, class: "brown-border px-3" %></th>
       <td><%= f.text_field :tel,  autofocus: true, class: "form-control"%></td>
    </tr>



    <tr>
       <th><%= f.label :メールアドレス, class: "brown-border px-3" %></th>
       <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control"%></td>
    </tr>
    </tbody>
  </table>
</div>

  <div class="row justify-content-center">
    <%= f.label :"会員ステータス", class:"col-sm-5 col-form-label col-md-offset-3" %>
    <div class="col-sm-3">
       <%= f.radio_button :is_deleted, false, class:"form-check-input" %>
       <%= f.label :is_deleted, '有効', value: false, class:"form-check-label" %>
    </div>
    <div class="col-sm-3">
      <%= f.radio_button :is_deleted, true, class:"form-check-input" %>
      <%= f.label :is_deleted, "退会", value: true, class:"form-check-label" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-4">
   </div>
    <div class="col-sm-6">
      <%= f.submit "変更を保存" ,class:"btn btn-success" %>
     </div>
   </div>
<% end %>
</div>